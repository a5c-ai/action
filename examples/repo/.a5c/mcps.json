{
  "_comment": "MCP Servers Configuration - This file contains configuration for MCP (Model Context Protocol) servers. Core servers (agent-executor, github) are always available and don't need to be configured here.",
  "mcpServers": {
    "database": {
      "command": "npx",
      "args": ["-y", "@myorg/mcp-server-database"],
      "env": {
        "DATABASE_URL": "${DATABASE_URL}"
      }
    },
    "slack": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}"
      }
    },
    "jira": {
      "command": "npx",
      "args": ["-y", "@myorg/mcp-server-jira"],
      "env": {
        "JIRA_URL": "${JIRA_URL}",
        "JIRA_TOKEN": "${JIRA_TOKEN}"
      }
    }
  }
} 